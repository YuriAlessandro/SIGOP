<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrn.sigestagios.activities.MainActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/include" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="SIGEstágios"
            android:textSize="50dp"
            android:id="@+id/appTitle"/>

        <TextView
            android:id="@+id/appDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="É necessário realizar login com o SIGAA para continuar. Clique no botão abaixo para continuar"
            android:padding="15dp"
            android:layout_below="@+id/appTitle"
            android:layout_alignParentStart="true" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appDesc"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:text="Login com SIGAA"
            android:onClick="login"/>

    </RelativeLayout>
</RelativeLayout>
