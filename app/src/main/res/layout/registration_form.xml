<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Titulo do estágio"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/toolbar"/>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_alignEnd="@id/title"/>

            <EditText
                android:id="@+id/responsible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nome do responsável"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_alignEnd="@id/title"/>


            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nome do local de estágio"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@+id/responsible"
                android:layout_alignStart="@+id/responsible"
                android:layout_alignEnd="@id/title"/>


            <EditText
                android:id="@+id/numberPositions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="N° de vagas"
                android:ems="10"
                android:inputType="number"
                android:layout_below="@+id/companyName"
                android:layout_alignStart="@+id/companyName"
                android:layout_alignEnd="@id/title"/>

            <EditText
                android:id="@+id/grantValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor do estágio"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="number"
                android:layout_below="@+id/numberPositions"
                android:layout_alignStart="@+id/numberPositions"
                android:layout_alignEnd="@id/title"/>

            <EditText
                android:id="@+id/auxTransport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Auxilio transporte"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="number"
                android:layout_below="@+id/grantValue"
                android:layout_alignStart="@+id/grantValue"
                android:layout_alignEnd="@id/title"/>

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textLongMessage"
                android:layout_below="@+id/auxTransport"
                android:layout_alignStart="@+id/auxTransport"
                android:layout_alignEnd="@id/title"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignStart="@+id/description"
                android:onClick="showDatePickerDialog"
                android:text="Data do fim da oferta" />

            <TextView
                android:id="@+id/endOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button1"
                android:layout_alignBottom="@+id/button1"
                android:layout_toEndOf="@+id/button1"
                android:layout_marginLeft="10dp"
                android:layout_alignEnd="@id/description"
                android:textSize="17dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button1"
                android:layout_alignStart="@id/button1"
                android:layout_alignEnd="@id/description"
                android:text="Cadastrar"
                android:onClick="register"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
